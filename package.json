{
  "name": "software-architecture-analyzer",
  "displayName": "Software Architecture Analyzer",
  "description": "Analisa arquitetura de projetos utilizando LLM",
  "icon": "icon.png",
  "publisher": "RafaelDegolindaSilva",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rafadegolin/software-architecture-analyzer"
  },
  "license": "MIT",
  "keywords": [
    "architecture",
    "analyzer",
    "ai",
    "llm",
    "gpt",
    "documentation",
    "code-analysis"
  ],
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.106.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "software-architecture-analyzer.analyze",
        "title": "üîç Analisar Arquitetura do Projeto"
      }
    ],
    "configuration": {
      "title": "Software Architecture Analyzer",
      "properties": {
        "architectureAnalyzer.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key da OpenAI ou Anthropic",
          "order": 1
        },
        "architectureAnalyzer.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic"
          ],
          "description": "Provider de LLM a ser usado",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
